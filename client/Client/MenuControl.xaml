<UserControl x:Class="Client.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="370" d:DesignWidth="400"
             xmlns:Client="clr-namespace:Client">
    <Grid Margin="0">
        <Rectangle Margin="0,0,0,0">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                    <GradientStop Color="#A9F5F2" Offset="0" />
                    <GradientStop Color="Azure" Offset="0.90" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <StackPanel Margin="23,78,26,29">
            <Border CornerRadius="6" BorderBrush="Black" Background="Transparent" BorderThickness="1" Height="155"/>
            <Border CornerRadius="6" BorderBrush="Black" Background="Transparent" BorderThickness="1" Height="91" Margin="0,15,0,0" RenderTransformOrigin="0.496,0.591">
                <Image x:Name="backImage1R"  Source="Images/folder.png" Margin="307,80,9,9" />
            </Border>
        </StackPanel>

        <Label x:Name="Backup" Content="Cartella di Backup" HorizontalAlignment="Left" VerticalAlignment="Top" Height="31" Width="155" BorderThickness="0" FontSize="15" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" Margin="37,80,0,0"/>
        <TextBox x:Name="BackupDir" IsReadOnly="True" HorizontalAlignment="Center" Height="27" Margin="37,133,75,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="288" FontSize="10" FontFamily="Tahoma" TextAlignment="Left" VerticalContentAlignment="Center">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
            <TextBox.ToolTip>
                <ToolTip DataContext="{Binding Path=PlacementTarget, RelativeSource={x:Static RelativeSource.Self}}">
                    <StackPanel>
                        <Label FontWeight="Bold" Content="Info"/>
                        <Label Content="Percorso cartella di backup"/>
                    </StackPanel>
                </ToolTip>
            </TextBox.ToolTip>
        </TextBox>
        <Button x:Name ="FolderButton" VerticalAlignment="Top" HorizontalAlignment="Left" Height="27" Width="36" Margin="338,133,0,0"  Click="Select_Folder">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <Button.Style>

                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">

                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border TextBlock.Foreground="{TemplateBinding Foreground}"
        							x:Name="Border"
        							Background="Transparent">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualStateGroup.Transitions>
                                                <VisualTransition GeneratedDuration="0:0:0.5" />
                                                <VisualTransition GeneratedDuration="0"
        											To="Pressed" />
                                            </VisualStateGroup.Transitions>
                                            <VisualState x:Name="Normal" />
                                            <VisualState x:Name="MouseOver"/>
                                            <VisualState x:Name="Pressed"/>
                                            <VisualState x:Name="Disabled"/>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                    <ContentPresenter Margin="2"
        								HorizontalAlignment="Center"
        								VerticalAlignment="Center"
        								RecognizesAccessKey="True" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal" Margin="0">
                <Image x:Name="backImage1"  Source="Images/folder.png" Height="25" Width="33" />
            </StackPanel>
        </Button>
        <Label x:Name="Wait" Content="Un attimo ancora..." Visibility="Hidden" HorizontalAlignment="Left" Margin="236,78,0,0" VerticalAlignment="Top" Height="31" Width="138" BorderThickness="0" FontSize="15" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" />
        <TextBox x:Name="FileUploading" Text="" Background="Transparent" IsReadOnly="True" HorizontalAlignment="Left" Margin="37,128,0,0" VerticalAlignment="Top" Height="23" Width="329" BorderThickness="0" FontSize="9" FontFamily="Tahoma" FontWeight="Bold" />
        <ProgressBar Name="pbStatus" Minimum="0" Maximum="100" Visibility="Hidden" Margin="37,205,34,153" Height="Auto" />
        <Button x:Name="EffettuaBackup" Content="Start" HorizontalAlignment="Left" Margin="265,172,0,0" VerticalAlignment="Top" Width="100" Height="33" FontFamily="Yu Gothic UI Semibold" FontSize="13" Opacity="0.9" Background="LightGray" IsEnabled="False" MouseEnter="EffettuaBackup_MouseEnter" MouseLeave="EffettuaBackup_MouseLeave" Click="EffettuaBackup_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <Button.Style>

                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">

                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border TextBlock.Foreground="{TemplateBinding Foreground}"
        							x:Name="Border"
        							CornerRadius="10"
        							BorderBrush="DarkBlue"
        							Background="{TemplateBinding Background}"
        							BorderThickness="2" Margin="0,0,4.2,6.4">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualStateGroup.Transitions>
                                                <VisualTransition GeneratedDuration="0:0:0.5" />
                                                <VisualTransition GeneratedDuration="0"
        											To="Pressed" />
                                            </VisualStateGroup.Transitions>
                                            <VisualState x:Name="Normal" />
                                            <VisualState x:Name="MouseOver"/>
                                            <VisualState x:Name="Pressed"/>
                                            <VisualState x:Name="Disabled"/>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                    <ContentPresenter Margin="2"
        								HorizontalAlignment="Center"
        								VerticalAlignment="Center"
        								RecognizesAccessKey="True" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="RestoreFile" Content="Restore File" HorizontalAlignment="Left" Margin="142,172,0,0" VerticalAlignment="Top" Width="100" Height="33" FontFamily="Yu Gothic UI Semibold" FontSize="13" Opacity="0.9" Background="LightGray" IsEnabled="True" MouseEnter="RestoreFile_MouseEnter" MouseLeave="RestoreFile_MouseLeave" Click="RestoreFile_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <Button.Style>

                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">

                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border TextBlock.Foreground="{TemplateBinding Foreground}"
        							x:Name="Border"
        							CornerRadius="10"
        							BorderBrush="DarkBlue"
        							Background="{TemplateBinding Background}"
        							BorderThickness="2" Margin="0,0,4.2,6.4">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualStateGroup.Transitions>
                                                <VisualTransition GeneratedDuration="0:0:0.5" />
                                                <VisualTransition GeneratedDuration="0"
        											To="Pressed" />
                                            </VisualStateGroup.Transitions>
                                            <VisualState x:Name="Normal" />
                                            <VisualState x:Name="MouseOver"/>
                                            <VisualState x:Name="Pressed"/>
                                            <VisualState x:Name="Disabled"/>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                    <ContentPresenter Margin="2"
        								HorizontalAlignment="Center"
        								VerticalAlignment="Center"
        								RecognizesAccessKey="True" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Label x:Name="Backup_Copy" Content="Cartella di Restore" HorizontalAlignment="Left" VerticalAlignment="Top" Height="31" Width="155" BorderThickness="0" FontSize="15" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" Margin="37,248,0,0"/>

        <Client:BackButtonUC x:Name="BackButtonControl"></Client:BackButtonUC>
        <Client:DisconnettiButtonUC></Client:DisconnettiButtonUC>
    </Grid>
</UserControl>
