<UserControl x:Class="Client.StartDownload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300" Background="White">
    <Grid>
        <Rectangle Margin="0,0,0,0">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                    <GradientStop Color="#FFFF66" Offset="0" />
                    <GradientStop Color="#FFFFCC" Offset="0.90" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label Padding="7,0,0,0"  Content="Download" HorizontalAlignment="Left" Margin="27,31,0,0" VerticalAlignment="Top" Height="38" Width="214" FontSize="12" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" Foreground="Blue" />
        <ProgressBar Name="pbStatus" Minimum="0" Maximum="100" Visibility="Visible" Margin="27,139,27,104.6" Height="Auto" />
        <Label Padding="7,0,0,0"  x:Name="downloadName" HorizontalAlignment="Left" Margin="27,74,0,0" VerticalAlignment="Top" Height="38" Width="246" FontSize="15" FontFamily="Tahoma" FontWeight="Bold" Foreground="Blue" />
    </Grid>
</UserControl>